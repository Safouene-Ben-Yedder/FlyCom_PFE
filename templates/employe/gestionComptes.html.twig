                     $('#nom', e).html(compte['nom_employe']);  
                     $('#cin', e).html(compte['cin']);  
                     $('#date_naissance', e).html(compte['date_naissance']);  
                     

                     $('#comptesShow').append(e); 

                  }  


               },  
               error : function(xhr, textStatus, errorThrown) {  
                  alert('Ajax request failed.');  
               }  
            });  
        
      });  



