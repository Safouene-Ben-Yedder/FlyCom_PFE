   <script language = "javascript">  
            $(document).ready(function(){   
            $.ajax({  
               url:        '/notification/lister_notifications' ,  
               type:       'GET',   
               dataType:   'json',  
               async:      true,  
               
               success: function(data, status) {  
            
        
                  for(i = 0; i < data.length; i++) {  
                     notification = data[i];  

                     var chaine='<div class="room-desk">'+
                                 '<div class="room-box">'+
                                   
                                   '<p>desc</p>'+
                                   '<p><span class="text-muted">Date :</span>da</p>'+
                                  '</div>'+
                                 '</div>';
                    chaine=chaine.replace("desc",notification['description']);         
                    chaine=chaine.replace("da",notification['date_notification']);

                    $('#show_notifications').append(chaine);

                     
                  }  


               },  
               error : function(xhr, textStatus, errorThrown) {  
                  alert('Ajax request failed.');  
               }  
            });  
        
      });  


   </script>   



